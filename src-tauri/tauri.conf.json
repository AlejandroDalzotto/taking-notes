{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Taking Notes",
  "version": "../package.json",
  "identifier": "com.taking-notes.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Taking Notes",
        "resizable": true,
        "fullscreen": false,
        "minHeight": 600,
        "minWidth": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "deb", "nsis", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/Square30x30Logo.png",
      "icons/Square44x44Logo.png",
      "icons/Square71x71Logo.png",
      "icons/Square89x89Logo.png",
      "icons/Square107x107Logo.png",
      "icons/Square142x142Logo.png",
      "icons/Square150x150Logo.png",
      "icons/Square284x284Logo.png",
      "icons/Square310x310Logo.png",
      "icons/StoreLogo.png"
    ],
    "fileAssociations": [
      {
        "ext": ["txt"],
        "mimeType": "text/plain",
        "description": "Text Document"
      },
      {
        "ext": ["md"],
        "mimeType": "text/markdown",
        "description": "Markdown Document"
      },
      {
        "ext": ["json"],
        "mimeType": "application/json",
        "description": "JSON File"
      },
      {
        "ext": ["csv"],
        "mimeType": "text/csv",
        "description": "CSV File"
      },
      {
        "ext": ["html", "htm"],
        "mimeType": "text/html",
        "description": "HTML Document"
      },
      {
        "ext": ["css"],
        "mimeType": "text/css",
        "description": "CSS File"
      },
      {
        "ext": ["js"],
        "mimeType": "text/javascript",
        "description": "JavaScript File"
      },
      {
        "ext": ["ts"],
        "mimeType": "text/typescript",
        "description": "TypeScript File"
      },
      {
        "ext": ["py"],
        "mimeType": "text/x-python",
        "description": "Python File"
      },
      {
        "ext": ["rs"],
        "mimeType": "text/x-rust",
        "description": "Rust File"
      }
    ],
    "createUpdaterArtifacts": true,
    "publisher": "Alejandro Dalzotto",
    "longDescription": "Taking Notes is a simple and easy-to-use note-taking application that allows you to create, edit, and organize your notes in a single place.",
    "shortDescription": "Taking Notes is a simple and easy-to-use note-taking application.",
    "copyright": "Copyright Â© 2026 Alejandro Dalzotto",
    "category": "Productivity"
  },
  "plugins": {
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMxMTVGMUQ5MDI5NzI1MDYKUldRR0paY0MyZkVWd1ljQ2daRlhrM1ZoQklQM1B4eVpnOHhNdW9hYXRaMElSaWRLTXlqSHd4VysK",
      "endpoints": ["https://github.com/alejandrodalzotto/taking-notes/releases/latest/download/latest.json"]
    }
  }
}
